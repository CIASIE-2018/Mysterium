{% extends "layouts/master.twig" %}

{% block content %}
    <ul>
        {% for player in players %}
            <li style="color:{% if player.id == me %}red{% else %}white{% endif %}">{{ player.id }} | {{ player.ready ? "pret" : "pas pret" }}

            </li>
        {% endfor %}
    </ul>

    <form method="post">
        <input type="hidden" name="id" value="{{ me }}">
        <input type="submit" value="se mettre pret">
    </form>
{% endblock %}
{% block scripts %}
<script>
    let socket = io();
    socket.on('reload', function(){
        location.reload();
    });
    socket.on('allIsReady', function(){
        location.href = '/game';
    })
</script>
{% endblock %}